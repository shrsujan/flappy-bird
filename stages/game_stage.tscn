extends Container

func _ready():
	var bird = utils.get_main_node().get_node(\"bird\")
	if bird:
		bird.connect(\"state_changed\", self, \"_on_bird_state_changed\")
	pass

func _on_bird_state_changed(bird):
	if bird.get_state() == bird.STATE_GROUNDED:
		get_node(\"anim\").play(\"show\")
	pass"
